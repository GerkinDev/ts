{
  "packages": ["packages/*"],
  "version": "independent",
  "toposort": true,
  "stream": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master"],
      "exact": true,
      "createRelease": true,
      "registry": "https://npm.pkg.github.com"
    }
  },
  "ignoreChanges": ["**/__tests__/**"]
}
